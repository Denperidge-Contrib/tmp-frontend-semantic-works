{{#each @docTree as |leaf|}}
  {{#if leaf.value}}
    {{#if leaf.link}}
      {{this.whitespace}}<LinkTo @route="docs.doc" @model={{leaf.name}}>{{leaf.displayName}}</LinkTo><br>
    {{else}}
      {{this.whitespace}}{{leaf.name}}<br>
    {{/if}}
    <MenuItems @docTree={{leaf.value}} @level={{this.nextLevel}}/>
  {{/if}}
{{/each}}